# get latest version and install of wordpress in putty

wget https://wordpress.org/latest.tar.gz

tar -xzvf latest.tar.gz

chown admin:admin ./ -R

find * -type d -print0 | xargs -0 chmod 0755

find * -type f -print0 | xargs -0 chmod 0644
